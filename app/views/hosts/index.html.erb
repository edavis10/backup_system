<h1>Listing hosts</h1>

<table class="table table-striped table-bordered">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @hosts.each do |host| %>
  <tr>
    <td><%= host.name %></td>
    <td><%= host.description %></td>
    <td><%= link_to 'Show', host, :class => 'btn btn-info' %></td>
    <td><%= link_to 'Edit', edit_host_path(host), :class => 'btn btn-info' %></td>
    <td><%= link_to 'Destroy', host, confirm: 'Are you sure?', method: :delete, :class => 'btn btn-danger' %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Host', new_host_path, :class => 'btn' %>
