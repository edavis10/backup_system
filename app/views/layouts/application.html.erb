<!DOCTYPE html>
<html>
<head>
  <title>BackupSystem</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar">
    <div class="navbar-inner">
      <div class="container">

        <a class="brand" href="/">Backup System</a>

        <ul class="nav pull-right">
          <% if current_user %>
            <li><%= link_to current_user.email, user_path(current_user) %></li>
            <li><%= link_to "Logout", :logout %></li>
          <% else %>
            <li><%= link_to "Login", :login %></li>
          <% end %>
        </ul>

      </div>
    </div>
  </div>

  <div class="container-fluid">
    <% if current_user %>
    <div class="sidebar span2">
      
      <ul class="nav nav-list">
        <li class="nav-header">Navigation</li>
        <li><%= link_to(hosts_path) do %>
            <i class="icon-home"></i> Hosts
        <% end %></li>
      </ul>
    </div>
    <% end %>
    <div class="content span10">
      <% if notice.present? %>
      <div class="alert"><%= notice %></div>
      <% end %>
      <% if alert.present? %>
      <div class="alert alert-error"><%= alert %></div>
      <% end %>
      <%= yield %>
    </div>
  </div>

</body>
</html>
